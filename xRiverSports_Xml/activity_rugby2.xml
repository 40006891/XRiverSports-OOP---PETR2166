<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FB8A"
    tools:context=".Rugby2Activity">

<!-- ******************************** TITLE BOX STARTS ******************************** -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Rugby \n - Six Nations - \n £80"
        android:textAlignment="center"
        android:textColor="#0009ff"
        android:textSize="25sp"
        android:textStyle="bold"
    />
<!-- ******************************** TITLE BOX END ******************************** -->


<!-- ******************************** NAV BUTTONS START ********************************* -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@id/textView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="1dp"
    android:layout_marginStart="240dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0009ff"
        android:textColor="#F0FB8A"
        android:text="Home"
        android:textAlignment="center"
    />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0009ff"
        android:textColor="#F0FB8A"
        android:text="Back"
        android:textAlignment="center"
        android:layout_marginLeft="2dp"
    />

</LinearLayout>
<!-- ******************************** NAV BUTTONS END ******************************** -->


<!-- ******************************** IMAGE START ******************************** -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/rugby"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="110dp"
        android:contentDescription="Rugby Image"
    />
<!-- ******************************** IMAGE END ******************************** -->



<!-- ***************************************** PRICING START ***************************************** -->


<!-- ******************************** CHECKBOXES START ******************************** -->

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="230dp"
        android:layout_marginTop="350dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/CheckMember"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="Member Ticket - £60 (25% OFF)"
            android:textColor="#0009ff"
        />

        <CheckBox
            android:id="@+id/CheckAdult"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Adult Ticket - £80"
            android:textColor="#0009ff"
        />

        <CheckBox
            android:id="@+id/CheckChild"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Child Ticket - £55"
            android:textColor="#0009ff"
        />

        <CheckBox
            android:id="@+id/CheckPint"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Pint - £2"
            android:textColor="#0009ff"
        />

        <CheckBox
            android:id="@+id/CheckPie"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Pie - £1"
            android:textColor="#0009ff"
        />

        <CheckBox
            android:id="@+id/CheckTour"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Tour of the Grounds - £40"
            android:textColor="#0009ff"
        />

        <CheckBox
            android:id="@+id/CheckMeetngreet"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Meet the Team - £60"
            android:textColor="#0009ff"
        />

    </LinearLayout>
    <!-- ******************************** CHECKBOXES END ******************************** -->


    <!-- ******************************** BUTTONS START ******************************** -->
    <Button
        android:id="@+id/btnbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="90dp"
        android:backgroundTint="#0009ff"
        android:textColor="#F0FB8A"
        android:text="Total"
    />

    <Button
        android:id="@+id/BtnComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="625dp"
        android:layout_marginLeft="90dp"
        android:backgroundTint="#0009ff"
        android:textColor="#F0FB8A"
        android:visibility="invisible"
        android:text="Checkout"
    />
    <!-- ******************************** BUTTONS END ******************************** -->


    <!-- ******************************** TEXT BOXES START ******************************** -->
    <TextView
        android:id="@+id/buytotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="410dp"
        android:textAlignment="center"
        android:textColor="#0009ff"
        android:textStyle="bold"
    />
    <!-- ******************************** TEXT BOXES END ******************************** -->


<!-- ***************************************** PRICING END ***************************************** -->

</RelativeLayout>

<!-- ********************************************************* COMMENTING THE CODE START *********************************************************

                                ***** I decided to put my large comments down here as I felt it made my coding look too cluttered. *****

                        TextView:                                   - This is a text box container
                            android:id="@+id/textView"              - This Line is defining the ID of this box as textView
                            android:layout_width="300dp"            - This line is setting the width of the container to 300dp
                            android:layout_height="wrap_content"    - This line is wrapping the height of the container to the text that is inside
                            android:text="Example"                  - This line is what will appear as text inside the container visible to the user
                            android:fontFamily="sans-serif"         - This is setting the font that is used for the text used in the container
                            android:layout_marginTop="20dp"         - This is adding a margin at the top of the container and is used to give space between
                                                                      containers
                            android:textSize="20dp"                 - This is the size of the text displayed inside container
                            android:textStyle="bold"                - This is setting the weight the text displayed in the container, in this case its set to bold
                            android:textAlignment="center"          - This line is setting the alignment of the text in the container to centre
                            android:textColor="#0009ff"             - This is the colour the text displayed will be in (colours codes are at the bottom of the page)
                            android:layout_below="@id/btnhome"      - This is setting the location of where the container will sit, this is showing it will be
                                                                      set to below the btnhome
                            android:layout_centerHorizontal="true"  - This is setting the container location relative to the page and is setting the container
                                                                      to be set in the middle of the page horizontally. meaning it isn't in the middle of the over all page.


                        Button:                                     - This is a button container
                            android:id="@+id/btnhome"               - This Line is defining the ID of this box as textView
                            android:layout_width="wrap_content"     - This line is wrapping the width of the container to the text that is inside
                            android:layout_height="wrap_content"    - This line is wrapping the height of the container to the text that is inside
                            android:layout_centerHorizontal="true"  - This is setting the container location relative to the page and is setting the container
                                                                      to be set in the middle of the page horizontally. meaning it isn't in the middle of the over all page.
                            android:text="Home"                     - This line is what will appear as text inside the container visible to the user
                            android:layout_below="@id/textView"     - This is setting the location of where the container will sit, this is showing it will be
                                                                      set to below the btnhome
                            android:backgroundTint="#0009ff"        - This line is creating a background for the button
                            android:textColor="#F0FB8A"             - This is the colour the text displayed will be in (colours codes are at the bottom of the page)


                        LinearLayout:                               - This is a container that holds other containers
                             android:layout_width="match_parent"    - This line is setting the width of the container to match the parent/page
                             android:layout_height="match_parent"   - This line is setting the height of the container to match the parent/page
                             android:layout_marginTop="150dp"       - This is adding a margin at the top of the container and is used to give space between
                             android:orientation="vertical">        - This is showing the orientation that the layout within the container will be


                        ImageView:                                  - This is a container that holds images
                             android:id="@+id/imageView2"           - This Line is defining the ID of this element as imageView2
                             android:layout_width="380dp"           - This line is setting the width of the container to 380dp
                             android:layout_height="wrap_content"   - This line is wrapping the height of the container to the text that is inside
                             android:layout_marginTop="50dp"        - This is adding a margin at the top of the container and is used to give space between
                             android:layout_centerHorizontal="true" - This is setting the container location relative to the page and is setting the container
                                                                      to be set in the middle of the page horizontally. meaning it isn't in the middle of the over all page.
                             app:srcCompat="@drawable/welcome_msg2" - This is showing the src of the compatible image is coming from the drawable folder and the image is
                                                                      called 'welcome_msg2'


                       CheckBox:                                        - This is a check box container, one that listens out for user input, it changes state with a
                                                                          visible effect so the user knows it has been clicked.
                             android:id="@+id/CheckTour"                - This Line is defining the ID of this element as CheckTour
                             android:layout_width="wrap_content"        - This line is wrapping the width of the container to the text that is inside
                             android:layout_height="25dp"               - This line is setting the height of the container to the text that is inside to 25dp
                             android:layout_marginLeft="5dp"            - This is adding a margin at the left of the container and is used to give space between
                             android:layout_marginTop="5dp"             - This is adding a margin at the top of the container and is used to give space between
                             android:text="Tour of the Grounds - £20"   - This line is what will appear as text inside the container visible to the user
                             android:textColor="#0009ff"                - This is the colour the text displayed will be in (colours codes are at the bottom of the page)


